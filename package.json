{
  "name": "backend-social-application",
  "version": "1.0.0",
  "description": "A high-quality NodeJS Express backend social application",
  "main": "app.js",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "init-db": "node src/database/initDatabase.js",
    "db:quick": "node src/database/quickDbCheck.js",
    "db:sync": "node -e \"require('./src/model').syncModels().then(console.log)\"",
    "db:reset": "node -e \"require('./src/model').resetDatabase().then(console.log)\"",
    "db:test-data": "node -e \"require('./src/model').createTestData().then(console.log)\"",
    "db:health": "node src/database/dbHealthCheck.js",
    "test": "mocha",
    "test:routes": "mocha ./tests/routes --exit",
    "test:unit": "mocha ./tests/unit --exit",
    "test:integration": "mocha ./tests/integration --exit",
    "test:e2e": "mocha ./tests/e2e --exit",
    "test:all": "mocha ./tests --exit",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc mocha ./tests --exit",
    "test:ci": "nyc mocha --reporter spec ./tests --exit",
    "test:performance": "mocha --grep performance",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:check": "npm audit --audit-level moderate",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-errors": "~1.6.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "uid": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^11.7.1",
    "nodemon": "^3.0.2",
    "nyc": "^17.1.0",
    "prettier": "^3.1.1",
    "sinon": "^21.0.0",
    "supertest": "^6.3.3"
  },
  "nyc": {
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/coverage/**",
      "**/bin/**",
      "**/public/**",
      "**/views/**",
      "**/tests/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html",
      "cobertura"
    ],
    "cache": false,
    "all": true,
    "check-coverage": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "backend",
    "social",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT"
}
